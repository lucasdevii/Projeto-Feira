generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  name         String
  email        String        @unique
  password     String
  userDevices  UserDevices[] @relation("UserDevices_User")
}

enum DetectionValue {
  NORMAL
  RISK
  CRITICAL
}

model Device {
  id           Int           @id @default(autoincrement())
  code         Int           @unique
  name         String
  local        String
  status       Boolean
  detection    DetectionValue
  userDevices  UserDevices[] @relation("UserDevices_Device")
}

model UserDevices {
  id          Int    @id @default(autoincrement())
  userId      Int
  deviceId    Int
  customName  String
  customLocal String
  code        Int
  
  user      User   @relation("UserDevices_User", fields: [userId], references: [id])
  device    Device @relation("UserDevices_Device", fields: [deviceId], references: [id])

  @@unique([userId, deviceId])
  @@unique([userId, code])
}
enum TokenType {
  SIGNUP
  RESET_PASSWORD
}
model Tokentabel {
  id     Int @id @default(autoincrement())
  token  Int @unique
  emailUser  String @unique  
  nameUser   String
  passwordUser  String
  createdAt DateTime @default(now())
  expiresAt DateTime
  type   TokenType
}
